---
import FormattedDate from './FormattedDate.astro';

type Props = {
  isSubheading?: boolean;
  pubDate: Date;
  updatedDate?: Date;
  name?: string;
  headline?: string;
  [key: string]: any;
};

const {
  isSubheading = false,
  pubDate,
  updatedDate,
  name,
  headline,
  ...props
} = Astro.props;
---

<div transition:name={name} transition:animate='initial' class='flex flex-row w-full justify-between my-8 space-x-4 px-4'>
  {
    isSubheading ? (
      <>
        <h4 {...props}>
          <slot />
        </h4>
        <p class='m-0'>
          <FormattedDate date={pubDate} />
        </p>
      </>
    ) : (
      <>
        <div class='md:text-lg text-gray-700 italic basis-1/3'>
          <FormattedDate date={pubDate} />
          {updatedDate && (
            <div class='italic'>
              Last updated on <FormattedDate date={updatedDate} />
            </div>
          )}
        </div>
        <div class=' text-gray-600 basis-2/3'>
          <p class='text-normal lg:text-end'>{headline}</p>
        </div>
      </>
    )
  }
</div>
