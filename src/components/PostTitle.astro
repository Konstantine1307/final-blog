---
export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section class='max-w-screen-2xl mx-auto flex justify-between'>
  <h1
    class='text-2xl md:text-4xl font-bold tracking-tighter leading-tight md:leading-none mb-12 text-left text-emerald-900 basis-2/3'
  >
    <slot />
    <a
      href='/rss.xml'
      class='rss-link inline-block text-pink-300'
      aria-label='rss feed'
      title='RSS Feed'
    >
      <svg xmlns='http://www.w3.org/2000/svg' class='rss-icon'
        ><path
          d='M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z'
        ></path><path
          d='M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z'
        ></path><circle cx='6' cy='18' r='2'></circle>
      </svg>
    </a>
  </h1>

  <a
    href='mailto:info@tgcottage.com'
    class='text-base md:text-2xl font-semibold underline underline-offset-4 md:mr-8'
  >
    Email us
  </a>
</section>

<style>
  .rss-icon {
    @apply ml-2  h-6 w-6 scale-110  sm:scale-125 ;
  }
</style>
